<category name="GoPiGo" colour="#CC3333" iconclass="blocklyTreeIconCustom gopigo">

  <label text="Imports and Init" web-class="myLabelStyle"></label>

  <block type="import_easygopigo3"></block>
  <block type="gpgset"></block>

  <label text="Movements" web-class="myLabelStyle"></label>

  <block type="gpgstop"></block>

  <block type="gpgmovement_noarg"></block>
  <block type="gpgmovement">
      <value name="value">
      <shadow type="textinline">
        <field name="text">20</field>
      </shadow>
    </value>
  </block>
  <block type="gpgsteer">
      <value name="value1">
      <shadow type="textinline">
        <field name="text">50</field>
      </shadow>
    </value>
      <value name="value2">
      <shadow type="textinline">
        <field name="text">50</field>
      </shadow>
    </value>
  </block>
  <block type="gpgorbit">
      <value name="value1">
      <shadow type="textinline">
        <field name="text">90</field>
      </shadow>
    </value>
      <value name="value2">
      <shadow type="textinline">
        <field name="text">50</field>
      </shadow>
    </value>
  </block>
  <block type="gpgsetspeed">
    <value name="speed">
      <shadow type="textinline">
        <field name="text">300</field>
      </shadow>
    </value>
  </block>
  <block type="gpggetspeed"></block>

  <label text="Other" web-class="myLabelStyle"></label>
  <block type="gpggetvolt"></block>

</category>

<category name="GoPiGo Lights" colour="#CC3333" iconclass="blocklyTreeIconCustom bulb">
  <label text="Blinkers" web-class="myLabelStyle"></label>
  <block type="gpgseteyecolor">
    <value name="color">
      <shadow type="textinline">
        <field name="text">(255,0,0)</field>
      </shadow>
    </value>
  </block>
  <block type="gpgopencloseyes"></block>
  <block type="gpgblinkers"></block>
</category>

<category name="GoPiGo Servos" colour="#CC3333" iconclass="blocklyTreeIconCustom servo">
</category>

<category name="GoPiGo Sensors" colour="#CC3333" iconclass="blocklyTreeIconCustom sensor">
  <label text="Init" web-class="myLabelStyle"></label>
  <block type="gpganalogdigital"></block>
  <label text="Analog and Digital" web-class="myLabelStyle"></label>
  <block type="gpgread"></block>
  <!-- <block type="gpgwrite"></block> -->
</category>

<category name="GoPiGo Actuators" colour="#CC3333" iconclass="blocklyTreeIconCustom actuator">
</category>
